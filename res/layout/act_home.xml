<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <android.support.v4.view.ViewPager
       android:id="@+id/act_home_viewpager"
       android:layout_weight="1"
       android:layout_width="fill_parent"
       android:layout_height="0dp"
       >
       
   </android.support.v4.view.ViewPager>
   <View 
       android:layout_width="fill_parent"
       android:layout_height="1dp"
       android:background="#bfbfbf"
       />
   <LinearLayout
       android:background="#F8F8FF"
       android:padding="3dp"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
       <LinearLayout 
           android:id="@+id/act_home_lin1"
           android:gravity="center"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           >
           <ImageView 
               android:id="@+id/act_home_lin1_iv"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/home_o"
               />
           <TextView 
               android:id="@+id/act_home_lin1_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="首页"
               android:textColor="#1296db"
               />
       </LinearLayout>
        <LinearLayout 
           android:id="@+id/act_home_lin2"
           android:gravity="center"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           >
           <ImageView 
               android:id="@+id/act_home_lin2_iv"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/message"
               />
           <TextView 
               android:id="@+id/act_home_lin2_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="信息"
               android:textColor="#909090"
               />
       </LinearLayout>
       <LinearLayout 
           android:layout_marginTop="5dp"
           android:id="@+id/act_home_lin3"
           android:gravity="center"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           >
           <ImageView 
               android:id="@+id/act_home_lin3_iv"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@drawable/add"
               />
       </LinearLayout>
       
       <LinearLayout 
           android:id="@+id/act_home_lin4"
           android:gravity="center"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           >
           <ImageView 
               android:id="@+id/act_home_lin4_iv"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/me"
               />
           <TextView 
               android:id="@+id/act_home_lin4_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="我的"
               android:textColor="#909090"
               />
       </LinearLayout>
       <LinearLayout 
           android:id="@+id/act_home_lin5"
           android:gravity="center"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           >

           <ImageView
               android:id="@+id/act_home_lin5_iv"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/more" />

           <TextView 
               android:id="@+id/act_home_lin5_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="更多"
               android:textColor="#909090"
               />
       </LinearLayout>
       
   </LinearLayout>

</LinearLayout>
