<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item  android:state_pressed="true">
        <shape  android:shape="rectangle">
            <corners  android:radius="8dp"/>
            <solid android:color="#5587CEFA"></solid>
            <stroke android:width="1dp" android:color="#87CEFA"></stroke>
        </shape>
    </item>
     <item >
        <shape android:shape="rectangle">
            <corners  android:radius="8dp"/>
            <solid android:color="#cc87CEFA"></solid>
            <stroke android:width="1dp" android:color="#a2a2a2"></stroke>
        </shape>
    </item>
   

</selector>
